# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()
#GET		/company/info/:id			controllers.CompanyController.getInfo(id: Long)


POST	/service/create				controllers.ServiceTypeController.createServiceType()

GET 	/service/:id				controllers.ServiceTypeController.getServiceType(id: Long)

POST 	/company/create             controllers.CompanyController.CreateControlType()

GET 	/company/:id				 controllers.CompanyController.getCompanyName(id: Long)

POST	/question/create			controllers.QuestionController.createQuestion()

GET 	/question/:id				controllers.QuestionController.getQuestion(id: Long)

POST	/answer/create				controllers.AnswerController.createAnswer()

GET 	/answer/:id					controllers.AnswerController.getAnswer(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
